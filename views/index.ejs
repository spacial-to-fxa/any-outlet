<%- include('layout', { body: `
    <div class="hero"><h1>Clearance Sale</h1></div>
    <div class="grid">
        <% products.forEach(p => { %>
            <div class="card">
                <img src="/uploads/${p.image}" style="width:100%;height:200px;object-fit:contain;">
                <h3>${p.name}</h3>
                <p><s>฿${p.realPrice}</s> <b style="color:red">฿${p.salePrice}</b></p>
                <% if(p.stock > 0) { %>
                    <a href="/checkout/${p._id}" class="btn">Buy</a>
                <% } else { %>
                    <button disabled>Out of Stock</button>
                <% } %>
            </div>
        <% }) %>
    </div>
` }) %>